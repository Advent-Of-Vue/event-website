---
export interface Props {
  title: string;
  description: string;
  class: string;
}

const { title, description, class: _class } = Astro.props as Props;
---

<section class:list={['hero', _class]}>
  <div class="hero-content text-center">
    <div>
      <h1 class="section-title text-5xl font-bold">{title}</h1>
      <p class="section-description text-xl py-7">{description}</p>
      <slot />
    </div>
  </div>
</section>
