---
import ContentSection from './Base.astro';
---

<ContentSection
  id="sign-up"
  class="bg-base-200 text-inherit"
  title="Sign Up"
  description="Join the mailing list to receive all the challenges!"
>
  <div class="flex flex-col gap-4 justify-center items-center mt-4 mb-7">
    <div class="form-control w-full max-w-xs">
      <label class="label justify-center" for="email">
        <span class="label-text text-xl text-inherit">Email address</span>
      </label>
      <input
        id="email"
        type="email"
        placeholder="iheartvue@example.com"
        class="input input-bordered w-full max-w-xs"
        required
      />
    </div>
    <button class="btn focus:outline-2 focus:outline-primary">Submit</button>
  </div>
</ContentSection>
